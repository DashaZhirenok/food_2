<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_cook_dark"
    tools:context="com.example.duska.food.SettingsActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:drawableTop="@drawable/ic_clear"
        android:id="@+id/btn_deleteAll"
        android:background="@color/color_button"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/btn_readLog"
        android:drawableTop="@drawable/ic_show"
        android:background="@color/color_button"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/settings_clearAll"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:background="@color/color_button"
        android:layout_above="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp"
        android:layout_toStartOf="@+id/btn_deleteAll" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/settings_read"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:background="@color/color_button"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_readLog" />

</RelativeLayout>
